# Claude Telegram Orchestrator - Configuration
# Copy this to config.env and fill in values
# For secrets (API keys), use .env.local instead (gitignored)

# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=""

# Your Telegram Chat ID (auto-detected on first message)
TELEGRAM_CHAT_ID=""

# Polling interval in seconds
POLL_INTERVAL=5

# Maximum concurrent Claude sessions
MAX_SESSIONS=5

# Output formatting threshold (chars before using AI summarization)
FORMAT_THRESHOLD=1500
