{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(bun:*)",
      "Bash(make:*)",
      "Bash(go test:*)",
      "Bash(go build:*)",
      "Bash(pytest:*)",
      "Bash(cargo test:*)",
      "Bash(cargo build:*)",
      "Bash(mvn:*)",
      "Bash(gradle:*)",
      "Bash(docker build:*)",
      "Bash(docker compose:*)",
      "Bash(terraform plan:*)",
      "Bash(terraform validate:*)",
      "Bash(helm lint:*)",
      "Bash(kubectl get:*)",
      "Bash(kubectl describe:*)",
      "Bash(.claude/scripts/*)",
      "Bash(.claude/telegram-orchestrator/*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(sudo:*)",
      "Bash(chmod 777:*)",
      "Bash(terraform apply:*)",
      "Bash(terraform destroy:*)",
      "Bash(kubectl delete:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/bin/bash /Users/gergokiss/.claude/scripts/hub-session-start.sh",
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/bin/bash /Users/gergokiss/.claude/scripts/stop-sound.sh"
          },
          {
            "type": "command",
            "command": "/bin/bash /Users/gergokiss/.claude/scripts/tts-reader.sh"
          },
          {
            "type": "command",
            "command": "/bin/bash /Users/gergokiss/.claude/scripts/hub-session-stop.sh",
            "async": true
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "skipDangerousModePermissionPrompt": true
}
